{
  "compilerOptions": {
    "strictNullChecks": true,
    "noUnusedLocals" : true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "outDir": "./public/",
    "sourceMap": true,
    "noImplicitAny": true,
    "lib": ["dom", "es2015", "es2017"],
    "module": "ES2015",
    "target": "es5",
    "jsx": "react",
    "moduleResolution": "node",
    "typeRoots": ["src/types", "node_modules/@types"],
    "allowJs": true,
    "declaration": false,
  },
  "include": [
    "./src/**/*"
  ]
}
