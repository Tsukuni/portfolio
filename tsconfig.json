{
  "compilerOptions": {
    "strictNullChecks": true,
    "noUnusedLocals" : true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "outDir": "./public/",
    "sourceMap": true,
    "noImplicitAny": true,
    "lib": ["dom", "es2015", "es2017"],
    "module": "ES2015",
    "target": "es5",
    "jsx": "react",
    "moduleResolution": "node",
  },
  "include": [
    "./src/**/*"
  ]
}